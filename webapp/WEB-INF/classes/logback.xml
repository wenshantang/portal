<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="true" scanPeriod="30 seconds">
	<contextName>fhcf.portal</contextName>
	<substitutionProperty name="log.base" value="d:/aresoft/logs/front" />
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<withJansi>false</withJansi>
		<encoder charset="utf-8">
			<pattern>
				%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%-5p] [%F:%L]:%m%n
			</pattern>
		</encoder>
	</appender>
	<appender name="logFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${log.base}/fhcf.portal.log</file>
		<encoder charset="UTF-8">
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%-5p] [%F:%L]:%m%n
			</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<Prudent>true</Prudent>
			<!-- 按天回滚 -->
			<fileNamePattern>
				${log.base}/%d{yyyyMMdd}/fhcf.portal%d{yyyyMMdd}.%i.log
			</fileNamePattern>
			<!-- 最多保留365天的记录 -->
			<maxHistory>365</maxHistory>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- 最大文件20MB，超过20MB会生成多个文件，即后缀为%i.log形式 -->
				<maxFileSize>20MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
	</appender>

	<root level="INFO">
		<appender-ref ref="stdout" />
		<appender-ref ref="logFile" />
	</root>
</configuration>